<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/EditTextCompromisso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Título do Compromisso"/>

    <EditText
        android:id="@+id/Descricao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Descrição do Compromisso" />

    <EditText
        android:id="@+id/DataCompromisso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Data do Compromisso" />

    <EditText
        android:id="@+id/PrioridadeCompromisso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Prioridade do Compromisso" />

    <CheckBox
        android:id="@+id/checkBoxRealizado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Foi realizado?" />

    <Button
        android:onClick="salvarAgendamento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Salvar"/>


</LinearLayout>